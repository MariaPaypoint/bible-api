DB_HOST=cep-mysql
DB_PORT=3306
DB_USER=cep
DB_PASSWORD=change-me
DB_NAME=cep

# Host bind mounts for docker-compose.yml
# AUDIO_DIR is required (host path where mp3 files are stored)
AUDIO_DIR=./audio
# SITE_DIR is optional if you do not start the web service
SITE_DIR=./site

MP3_FILES_PATH=/audio
AUDIO_BASE_URL=http://localhost

API_KEY=
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

ADMIN_USERNAME=admin
# For Compose .env, escape bcrypt dollars as $$ (Compose will pass single $ into container).
# Generate hash for password "admin123":
# python3 -c "import bcrypt; print(bcrypt.hashpw(b'admin123', bcrypt.gensalt()).decode().replace('$','$$'))"
ADMIN_PASSWORD_HASH=$$2b$$12$$...
